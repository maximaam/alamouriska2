{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label.change_password'|trans }}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="col">
        <div class="card w-50 mx-auto shadow-sm">
            <div class="card-header">
                <h1 class="text-center">{{ 'label.change_password'|trans }}</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_row(form.plainPassword) }}
                <div class="text-end">
                    <button class="btn btn-primary" type="submit">{{ 'send'|trans }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'user.html.twig' %}

{% block title %}
    {{ 'label.change_password'|trans }}
    {{ parent() }}
{% endblock %}

{% block card_header %}
    <h1 class="text-center">{{ 'label.change_password'|trans }}</h1>
{% endblock %}

{% block card_body %}
    {{ form_start(form) }}
    {{ form_row(form.plainPassword) }}
    <div class="text-end">
        <button class="btn btn-primary" type="submit">{{ 'send'|trans }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block card_footer %}
{% endblock %}
